@model Orchard.Packaging.ViewModels.PackagingSourcesViewModel

@{ Layout.Title = T("Settings").ToString(); }

<h2>@T("Gallery")</h2>
<div class="manage">
    @Html.ActionLink(T("Add Feed").Text, "AddSource", new { }, new { @class = "btn btn-primary" })
</div>
@using (Html.BeginFormAntiForgeryPost()) {
<fieldset class="table-responsive">
    <table class="table table-hover table-bordered items" summary="@T("This is a table of the gallery feeds in your application")">
        <colgroup>
            <col id="Col1" />
            <col id="Col2" />
            <col id="Col3" />
        </colgroup>
        <thead>
            <tr>
                <th scope="col">@T("Title")</th>
                <th scope="col">@T("Url")</th>
                <th class="text-right" scope="col">@T("Actions")</th>
            </tr>
        </thead>
        @foreach (var item in Model.Sources)
        {
            <tr>
                <td>@item.FeedTitle</td>
                <td>@Html.Link(item.FeedUrl, item.FeedUrl)</td>
                <td class="text-right">@Html.ActionLink(T("Delete").ToString(), "Remove", new { id = item.Id }, new { itemprop = "RemoveUrl UnsafeUrl" })</td>
            </tr>
        }
    </table>
</fieldset>
}